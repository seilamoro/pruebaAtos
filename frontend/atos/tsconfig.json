{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["cypress"],
    "lib": [
      "es2018",
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "include": [
    "src",
    "cypress/**/*.ts"
  ]
}
